[user]
	name = Jonic Linley
	email = jonic@100yen.co.uk
[core]
	excludesfile = /Users/Jonic/.gitignore_global
	autocrlf = input
[push]
	default = simple
[merge]
	ff = false

[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[alias]
	stats = shortlog -sn
	lastchange = log -p --follow -n 1
[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
[mergetool]
	keepBackup = true
